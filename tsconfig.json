{
  "compilerOptions": {
    "outDir": "./dist",

    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext", 
    "esModuleInterop": true,

    "declaration": true,
    "declarationMap": true,

    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,

    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
